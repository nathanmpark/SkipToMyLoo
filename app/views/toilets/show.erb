<div class="show-toilets">

  <div class="toilet-header">
    <h1> <%= @toilet.location%> </h1>

    <h3><a id="reviewButton" href="#">Rate This Toilet!</a></h3>

    <ul>
      <li>Number of Stalls: <%=@toilet.num_stalls%></li>
      <li>Has Hooks: <%=@toilet.has_hooks%></li>
      <li>Has Mirrors: <%=@toilet.has_mirrors%></li>
      <li>Has Change Tables<%=@toilet.has_change_tables%></li>
    </ul>

    <%= erb :_votingPartial, locals: {toilet: @toilet} %>

    <hr>

    <h3> Reviews</h3>
    <div id="reviewsList">
      <ul>
      <%@toilet.ratings.reverse.each do |rating| %>
        <li><%=rating.stars%> Stars</li>
        <p>"<%=rating.review%>"</p>
        <hr>
      <%end%>
      </ul>
    </div>

  </div>
</div>
