map.on('style.load', function () {
    map.addSource("markers", {
        <% @geojson.each do |geojson| %>
        "type": "geojson",
        "data": {
            "type": "FeatureCollection",
            "features": [<%= geojson %>]
        <%end%>
    });

    map.addLayer({
        "id": "markers",
        "type": "symbol",
        "source": "markers",
        "layout": {
            "icon-image": "{marker-symbol}-15",
            "text-field": "{title}",
            "text-font": ["Open Sans Semibold", "Arial Unicode MS Bold"],
            "text-offset": [0, 0.6],
            "text-anchor": "top"
        },
        "paint": {
            "text-size": 12
        }
    });
});




